<head>
    <style>
        table {
            
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #8E44AD;
            text-align: left;
            padding: 8px;
        }

        /* tr:nth-child(even) {
            background-color: #dddddd;
        } */
        #edit{
            border-radius: 5px;
            border: 1px solid #8E44AD;
        }
        #delete{
            border-radius: 5px;
            border: 1px solid #8E44AD;
        }
    </style>
</head>
<body>
    <!-- Preloader -->
    <div id="preloader">
        <div class="preloader">
            <span></span>
            <span></span>
        </div>
    </div>
    <!-- Start Header Area -->
    <header class="header">
        <div class="container">
            <div class="row">
                <!-- Logo -->
                <div class="col-lg-2 col-12 align-self-center">
                    <div class="logo">
                        <a asp-action="Index" asp-controller="Home">
                            <img class="light-logo" src="~/img/white-logo.png" alt="logo" />
                            <img class="dark-logo" src="~/img/white-logo.png" alt="logo" />
                        </a>
                    </div>
                    <div class="mobile-menu-tg">
                        <div class="mobile-lg-toggle">
                            <div class="toggle-btn-lg">
                                <span></span>
                            </div>
                        </div>
                        <div class="mobile-menu">
                            <i class="fas fa-bars"></i>
                        </div>
                    </div>
                </div>
                <!-- Header Right -->
                <div class="col-lg-10 col-12">
                    <!-- Right Button -->
                    <div class="dl-cv">
                        <a class="button-1" asp-action="SignOut">Sign Out</a>
                    </div>
                    <!-- Menu -->
                    <div class="menu">
                        <nav>
                            <ul>
                                <li class="nav-item current">
                                    <a class="nav-link" href="#home">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#about">About Us</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#services">Services</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#portfolio">Portfolio</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#blog">Blog</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact Us</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- End Header Area -->

    <table>
        <div class="row">
            <div class="col-lg-12" style="margin-top:8%;">
                <div class="section-headding mb-40 text-center">
                    <h2>Contacts</h2>
                </div>
            </div>
        </div>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Subject</th>
            <th>Message</th>
            @* <th>Date Created</th> *@
            <th></th>
            
        </tr>

        @foreach(var item in Model)
        {
        <tr>
            <td>@item.userid</td>
            <td>@item.name</td>
            <td>@item.email</td>
            <td>@item.phone</td>
            <td>@item.subject</td>
            <td>@item.message</td>
            <td >
                    <div style="text-align:center;">
                    <button id="edit" >Edit</button>
                    <button id="delete" >Delete</button>
                    </div>
            </td>

            @* <td>@Contacts.datecreated</td> *@
        </tr>
        }
        
    </table>
    </body>
