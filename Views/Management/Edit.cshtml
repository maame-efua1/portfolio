
<head>
    <link rel="stylesheet" href="~/loginstyle.css" />
</head>
<body>
    <!-- Preloader -->
    <div id="preloader">
        <div class="preloader">
            <span></span>
            <span></span>
        </div>
    </div>
    <!-- Start Header Area -->
    <header class="header">
        <div class="container">
            <div class="row">
                <!-- Logo -->
                <div class="col-lg-2 col-12 align-self-center">
                    <div class="logo">
                        <a>
                            <img class="light-logo" src="~/img/white-logo.png" alt="logo" />
                            <img class="dark-logo" src="~/img/white-logo.png" alt="logo" />
                        </a>
                    </div>
                    <div class="mobile-menu-tg">
                        <div class="mobile-lg-toggle">
                            <div class="toggle-btn-lg">
                                <span></span>
                            </div>
                        </div>
                        <div class="mobile-menu">
                            <i class="fas fa-bars"></i>
                        </div>
                    </div>
                </div>
                <!-- Header Right -->
                <div class="col-lg-10 col-12">
                    <!-- Right Button -->
                    <div class="dl-cv">
                        <a class="button-1" asp-controller="Home" asp-action="Index">Sign Out</a>
                    </div>
                    <!-- Menu -->
                    <div class="menu">
                        <nav>
                            <ul>
                                <li class="nav-item ">
                                    <a class="nav-link" asp-action="Dashboard">Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-action="Users">Users</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-action="Contact">Contacts</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- End Header Area -->
    <section class="login-area pt-20 pb-50" id="login">
        <div class="login-container">
            
            <form  method="post">
                <div class="container">
                    <h2 id="heading">Update User Info</h2>
                    <br />
                    <label for="firstname"><b>First Name</b></label>
                    <input type="text" value="@Model.firstname" id="firstname" name="firstname" >
                    
                    <label for="lastname"><b>Last Name</b></label>
                    <input type="text" value="@Model.lastname" id="lastname" name="lastname">

                    <label for="username"><b>Username</b></label>
                    <input type="text" value="@Model.username" id="username" name="username">
                    


                    <button type="submit">Update</button><br>

                </div>


            </form>
        </div>
    </section>
</body>
