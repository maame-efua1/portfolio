<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #8E44AD;
            text-align: left;
            padding: 8px;
        }

        /* tr:nth-child(even) {
                    background-color: #dddddd;
                } */
        #edit {
            border-radius: 5px;
            border: 1px solid #8E44AD;
            margin-right: 2px;
        }

        #delete {
            border-radius: 5px;
            border: 1px solid #8E44AD;            
        }
        #del, #edi{color:black;}
    </style>
</head>
<body>
    <!-- Preloader -->
    <div id="preloader">
        <div class="preloader">
            <span></span>
            <span></span>
        </div>
    </div>
    <!-- Start Header Area -->
    <header class="header">
        <div class="container">
            <div class="row">
                <!-- Logo -->
                <div class="col-lg-2 col-12 align-self-center">
                    <div class="logo">
                        <a >
                            <img class="light-logo" src="~/img/white-logo.png" alt="logo" />
                            <img class="dark-logo" src="~/img/white-logo.png" alt="logo" />
                        </a>
                    </div>
                    <div class="mobile-menu-tg">
                        <div class="mobile-lg-toggle">
                            <div class="toggle-btn-lg">
                                <span></span>
                            </div>
                        </div>
                        <div class="mobile-menu">
                            <i class="fas fa-bars"></i>
                        </div>
                    </div>
                </div>
                <!-- Header Right -->
                <div class="col-lg-10 col-12">
                    <!-- Right Button -->
                    <div class="dl-cv">
                        <a class="button-1" asp-controller="Management" asp-action="SignOut">Sign Out</a>
                    </div>
                    <!-- Menu -->
                    <div class="menu">
                        <nav>
                            <ul>
                                <li class="nav-item ">
                                    <a class="nav-link" asp-action="Dashboard">Dashboard</a>
                                </li>
                                <li class="nav-item current">
                                    <a class="nav-link" asp-action="Users">Users</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-action="Contact">Contacts</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- End Header Area -->

    <table>
        <div class="row">
            <div class="col-lg-12" style="margin-top:8%;">
                <div class="section-headding mb-40 text-center">
                    <h2>Users</h2>
                </div>
            </div>
        </div>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Username</th>
            <th>Actions</th>
            
            @* <th>Date Created</th> *@
           

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.userid</td>
                <td>@item.firstname</td>
                <td>@item.lastname</td>
                <td>@item.username</td>
                
                <td>
                    <div style="text-align:center;">
                        <button id="edit"> <a href="/Management/Edit?userId=@(item.userid)" id="edi">Edit<i class="fas fa-pen"></i></a></button>
                        <button id="delete"> <a href="/Management/Delete?userId=@(item.userid)" id="del">Delete<i class="fas fa-trash"></i></a></button>
                    </div>
                </td>

                @* <td>@Contacts.datecreated</td> *@
            </tr>
        }

    </table>
</body>
